{
    "name": "quote-of-the-day",
    "private": true,
    "version": "1.0.0",
    "description": "Sample custom element for demo purpose",
    "main": "index.js",
    "scripts": {
        "start": "browser-sync . --ss static --https -w",
        "clean": "rm -rf node_modules dist package-lock.json",
        "lint": "eslint 'src/**/*.ts' --fix; prettier 'src/**/*.ts' --write",
        "build": "tsc -p src",
        "sass": "node-sass src/sass/*.scss -o dist/css",
        "sass-watch": "npm run sass; npm run sass -- -w",
        "watch": "tsc -p src; webpack -w"
    },
    "dependencies": {
        "lit-element": "latest",
        "lit-html": "latest"
    },
    "keywords": [],
    "author": "Dominique Rochefort",
    "license": "ISC",
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "latest",
        "@typescript-eslint/parser": "latest",
        "browser-sync": "latest",
        "eslint": "latest",
        "node-sass": "^4.13.0",
        "prettier": "latest",
        "ts-loader": "latest",
        "typescript": "latest",
        "webpack": "latest",
        "webpack-cli": "latest"
    },
    "eslintConfig": {
        "parser": "@typescript-eslint/parser",
        "plugins": [
            "@typescript-eslint"
        ],
        "extends": [
            "plugin:@typescript-eslint/recommended"
        ],
        "rules": {
            "@typescript-eslint/no-explicit-any": [
                0
            ]
        }
    },
    "prettier": {
        "endOfLine": "lf",
        "printWidth": 160,
        "singleQuote": true,
        "semi": true,
        "trailingComma": "es5",
        "tabWidth": 4,
        "useTabs": false
    }
}
